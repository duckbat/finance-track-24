{
  "name": "hybrid-graphql-starter",
  "version": "0.0.1",
  "description": "A basic starter for an express.js API with Typescript & GraphQL",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/hybrid-graphql/src/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "copygql": "copyfiles -E -u 1 src/api/schemas/*.graphql dist/hybrid-graphql/src",
    "postbuild": "npm run copygql",
    "lint": "eslint --fix src test",
    "test": "jest"
  },
  "keywords": [],
  "author": "ILE",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.1",
    "@graphql-tools/schema": "^10.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "graphql-constraint-directive": "^5.3.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "gts": "^5.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
